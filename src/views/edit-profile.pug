extends base

block content 
    if errorMessage 
        span=errorMessage
    
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    form(method="post" enctype="multipart/form-data")
        label(for="avatar") Avatar 
        input(type="file", id="avatar", name="avatar", acccept="image/*")
        input(type="text", name="username", placeholder="Username", required, value=loggedInUser.username)
        input(type="email", name="email", placeholder="E-mail", required, value=loggedInUser.email)
        input(type="text", name="name", placeholder="Name", required, value=loggedInUser.name)
        input(type="text", name="location", placeholder="Location", value=loggedInUser.location)
        input(type="submit", value="Edit profile")
        hr
        a(href="/users/change-password") Change Password &rarr;