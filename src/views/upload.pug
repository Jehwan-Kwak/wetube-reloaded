extends base.pug

block content 
    .upload__container 
        .upload__video  
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage 
            span=errorMessage
        form(method="post", enctype="multipart/form-data")
            label(for="video") Video file 
            input(type="file", id="video", name="video" required, accept="video/*")
            label(for="thumb") Thumbnail file 
            input(type="file", id="thumb", name="thumb" required, accept="image/*")
            input(placeholder="Title", type="text", name="title", required, maxlength=80)
            input(placeholder="Description", type="text", name="description", required, minlength=2)
            input(placeholder="Hashtags, separated by comma", type="text", name="hashtags", required)
            input(type="submit", value="Upload Video")     

block scripts 
    script(src="/static/js/recorder.js")