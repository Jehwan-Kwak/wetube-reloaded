extends base.pug

block content 
    div 
        video#preview
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="post", enctype="multipart/form-data")
        label(for="video") Video file 
        input(type="file", id="video", name="video" required, accept="video/*")
        input(placeholder="Title", type="text", name="title", required, maxlength=80)
        input(placeholder="Description", type="text", name="description", required, minlength=20)
        input(placeholder="Hashtags, separated by comma", type="text", name="hashtags", required)
        input(type="submit", value="Upload Video")     

block scripts 
    script(src="/static/js/recorder.js")