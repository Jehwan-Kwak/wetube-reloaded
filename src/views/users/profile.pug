extends ../base 
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.avatarUrl.includes("github")
            img(crossorigin src=user.avatarUrl).avatar
            h3=user.name
        else 
            img.avatar(crossorigin src="/" + loggedInUser.avatarUrl)
            h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found